<div class="container-fluid">

<div class="row title">
	<div class="col-md-8 col-md-offset-1">
		<div class="page-header">
			<h1>Peer Review Feedback</h1>
		</div>
	</div>
</div>

<form method="post">
	<div class="row step2">
		<div class="col-md-8 col-md-offset-1">
			<h3><label>Step 1: Select Grade Based on Rubric</label></h3>
			<h3><b>Submission Evaluation</b></h3>
				<div class="form-group row {{if isValidPremise "has-success" "has-error"}}">
					<div class="col-md-2 col-md-offset-1">
						<label><font style='color: #ff0000'>*</font>Premise</label>
					</div>
					<span class="glyphicon glyphicon-ok form-control-feedback" ></span>
					<div class="col-md-6">
						{{input class="premise" type="integer" value=model.premise min=0 max=15 autofocus="autofocus"}}
						/15
					</div>
				</div>

				<div class="form-group row {{if isValidResearch "has-success" "has-error"}}">
					<div class="col-md-2 col-md-offset-1">
						<label><font style='color: #ff0000'>*</font>Research</label>
					</div>
					<span class="glyphicon glyphicon-ok form-control-feedback" ></span>
					<div class="col-md-6">
						{{input class="research" type="integer" value=model.research min=0 max=15 autofocus="autofocus"}}
						/15
					</div>
				</div>

				<div class="form-group row {{if isValidStyle "has-success" "has-error"}}">
					<div class="col-md-2 col-md-offset-1">
						<label><font style='color: #ff0000'>*</font>Style</label>
					</div>
					<span class="glyphicon glyphicon-ok form-control-feedback" ></span>
					<div class="col-md-6">
						{{input class="style" type="integer" value=model.style min=0 max=15 autofocus="autofocus"}}
						/15
					</div>
				</div>

			<div class="row total">
				<div class="col-md-8 col-md-offset-1">
					<h4>TOTAL: {{model.total}}/45 </h4>
				</div>
			</div>


			<div class="form-group row">
                <div class="col-md-4 col-md-offset-1">
                    <h6><font style="color: #ff0000">*</font> denotes required field</h6>
                </div>
            </div>
		</div>
	</div>

	<div class="form-group row step3">
		<div class="col-md-8 col-md-offset-1">
			<h3><b>Step 2: Comment Below</b></h3>
			{{textarea value=model.comment cols="80" rows="10"}}
		</div>
	</div>

<div class="form-group row">
	<div class="col-md-4 col-md-offset-1">
		<h3><b>Step 3: Submit</b></h3>
		<div id="submitAlert" class="alert alert-success hide fade in">
		Success! Feedback submitted.
		</div>
		<button style = "height: 40px; width: 100px" class="form-control" {{action "saveEvaluation" model}} type="submit" disabled={{isDisabled}}>Submit</button>
	</div>
</div>


</form>
</div>

{{outlet}}