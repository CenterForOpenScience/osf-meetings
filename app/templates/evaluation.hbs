{{x-woof}}

<div class="container-fluid">

<div class="row title">
	<div class="col-md-8 col-md-offset-1">
		<div class="page-header">
			<h1>Peer Review Feedback</h1>
		</div>
	</div>
</div>

<form>
	<div class="row step2">
		<div class="col-md-8 col-md-offset-1">
			<h3><label>Step 1: Select Grade Based on Rubric</label></h3>
			<h4><b>Submission Evaluation</b></h4>
				<div class="row premise">
					<div class="col-md-1 col-md-offset-1">
						<label>Premise</label>
						{{input class="premise" type="integer" value=model.premise}}
						/15
					</div>
				</div>

				<div class="row research">
					<div class="col-md-1 col-md-offset-1">
						<label>Research</label>
						{{input class="research" type="integer" value=model.research}}
						/15
					</div>
				</div>

				<div class="row style">
					<div class="col-md-1 col-md-offset-1">
						<label>Style</label>
						{{input class="style" type="integer" value=model.style}}
						/15
					</div>
				</div>

			<div class="row total">
				<div class="col-md-8 col-md-offset-1">
					<h4>TOTAL: {{model.total}}/45 </h4>
				</div>
			</div>
		</div>
	</div>

	<div class="row step3">
		<div class="col-md-8 col-md-offset-1">
			<h3><b>Step 2: Comment Below</b></h3>
			<textarea name="comment" rows = "10" cols = "90"></textarea>
		</div>
	</div>

<div class="row">
	<div class="col-md-4 col-md-offset-1">
		<h3><b>Step 3: Submit</b></h3>
		<button {{action "saveEvaluation" model}} type="submit" class="submit btn btn-default">Submit</button>
		<div id="submitAlert" class="alert alert-success hide fade in">
		Success! Feedback submitted.
		</div>
	</div>
</div>


</form>
</div>

{{outlet}}