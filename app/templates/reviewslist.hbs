<div class="container-fluid">
<div class="row">
    <div class="col-md-12">

        <h3 class="text-center text-primary">
        </h3>
        <h2>
            List of Assigned Reviews
        </h2>



        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Title
                </th>
                <th>
                    Conference
                </th>
                <th>
                    Review Deadline
                </th>
                <th>
                    Status
                </th>
                <th>

                </th>
            </tr>
            </thead>
            <tbody>
            {{#each model as |d|}}
                <tr>
                    <td>
                      {{d.id}}
                    </td>
                    <td>
                      {{d.title}}
                    </td>
                    <td>
                      {{d.conference}}
                    </td>
                    <td>
                      {{d.reviewdeadline}}
                    </td>
                    <td>
                      {{d.status}}
                    </td>

                    <td>
                        <form><input type=submit value="View" style="width:100%" {{action 'openreview'}}></form>
                    </td>

                </tr>
            {{/each}}
            </tbody>
        </table>



    </div>
</div>


</div>



{{outlet}}
