
<div class="container-fluid osf-light-background">
  {{#if tileview}}
  <div class="row conference-view-outer-container" id="indexBottom">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-10 col-md-offset-1 tile-view fade-background">
        <button class="btn btn-success navbar-btn" {{action "toggleInfo"}}>
          <span class="glyphicon glyphicon-plus"></span>
          Register a Meeting
        </button>
        <button id="tileButton" class="btn btn-default navbar-btn" {{action "tileView"}}>
          <span class="glyphicon glyphicon-th-large"></span>
        </button>
        <button id="listButton" class="btn btn-default navbar-btn" {{action "listView"}}>
          <span class="glyphicon glyphicon-th-list"></span>
        </button>
        <div class="row" id="submission-instructions">
          <div class="col-md-6">
              <div class="submission-modal">
              <strong>Create through email</strong>
              <h6>OSF for Meetings is a product that we offer to academic conferences at no cost. To request poster and talk hosting for a conference:</h6>

              <strong>Email us at <span style="color: blue;">contact@cos.io</span></strong>

              <h6>We'll review and add your conference within one business day.</h6>
              </div>
          </div>
          <div class="col-md-6">
              <div class="btn-group submission-modal" role="group" aria-label="...">
                  <strong>Create Here:</strong>
                  <br>
                  <h6>You can also use our conference creation form to set up your meeting here</h6>
                      <button type="button" class="btn btn-success" style="margin: 0 0 5px 0; width: 200px;" {{action "create"}}><span class="glyphicon glyphicon-plus"></span>  Create a Conference</button>
              </div>
          </div>
        </div>
        <div class="row">
        {{#if this.results}}
              <div class="col-md-12 hidden-md hidden-lg hidden-xl">
                {{#each model as |conf key|}}
                  {{#link-to "conference.index" conf.id }}
                      {{meeting-masonry model=conf}}
                  {{/link-to}}
                {{/each}}
                </div>
            <div class="col-md-6 no-padding hidden-sm hidden-xs">
            {{#each model as |conf key|}}
                  {{#if (is-even key)}}
                      {{#link-to "conference.index" conf.id }}
                          {{meeting-masonry model=conf}}
                      {{/link-to}}
                  {{/if}}
                {{/each}}
            </div>
            <div class="col-md-6 no-padding hidden-sm hidden-xs">
            {{#each model as |conf key|}}
                  {{#if (is-even key)}}
                  {{else}}
                      {{#link-to "conference.index" conf.id }}
                          {{meeting-masonry model=conf}}
                      {{/link-to}}
                  {{/if}}
                {{/each}}
            </div>
        {{else}}
        <h4> There are no Conferences available <em><strong>{{this.query}}</strong></em></h4>
        {{/if}}     
        </div>
      </div> <!-- end tile view -->
    </div> <!-- end conference-view-inner-container-->
  </div><!-- end conference-view-outer-container-->
  {{else}}
  <div class="row conference-view-outer-container">
    <div class="col-md-10 col-md-offset-1 ">
      <div class="col-md-10 col-md-offset-1 fade-background table-view">
        <button class="btn btn-success navbar-btn" {{action "toggleInfo"}}>
          <span class="glyphicon glyphicon-plus"></span>
          Create a Meeting
        </button>
        <button id="tileButton" class="btn btn-default navbar-btn" {{action "tileView"}}>
          <span class="glyphicon glyphicon-th-large"></span>
        </button>
        <button id="listButton" class="btn btn-default navbar-btn" {{action "listView"}}>
          <span class="glyphicon glyphicon-th-list"></span>
        </button>
        <div class= "row" id="submission-instructions">
          <div class="col-md-6">
              <div class="submission-modal">
              <strong>Create through email</strong>
              <h6>OSF for Meetings is a product that we offer to academic conferences at no cost. To request poster and talk hosting for a conference:</h6>

              <strong>Email us at <span style="color: blue;">contact@cos.io</span></strong>

              <h6>We'll review and add your conference within one business day.</h6>
              </div>
          </div>
          <div class="col-md-6">
              <div class="btn-group submission-modal" role="group" aria-label="...">
                  <strong>Create Here:</strong>
                  <br>
                  <h6>You can also use our conference creation form to set up your meeting here</h6>
                      <button type="button" class="btn btn-success" style="margin: 0 0 5px 0; width: 200px;" {{action "create"}}><span class="glyphicon glyphicon-plus"></span>  Create a Conference</button>
              </div>
          </div>
        </div>
        
        {{#if this.results}}
        <div class="col-md-12">
          <div class="row table-head">
            <div class="col-md-4">
              <h4>Title</h4>
            </div>
            <div class="col-md-4">
              <h4>Location</h4>
            </div>
            <div class="col-md-4">
              <h4>Description</h4>
            </div>
          </div>
          {{#each model as |conference|}}
          {{#link-to "conference.index" conference.id tagName="div" class="row" id="tablerow"}}
          <div class="col-md-4">
            <h5><strong><em>{{conference.title}} {{@key}}</em></strong></h5>
          </div>
          <div class="col-md-4">
            <h5>{{conference.city}}, {{conference.state}}</h5>
          </div>
          <div class="col-md-4">
            <h5>{{truncate conference.description limit=200}}</h5>
          </div>
          {{/link-to}}
          {{/each}}
        </div>
        {{else}}
        <h4> There are no results for <em><strong>{{this.query}}</strong></em></h4>
        {{/if}}
      </div> <!-- end conference-view-inner-container -->
    </div> <!-- end table-view -->
  </div> <!-- conference-view-outer-container -->
  {{/if}}
  <div class="row" id="indexBottom">
    <div class="col-md-10 col-md-offset-1 conference-view-inner-container">
      <div class="col-md-10 col-md-offset-1 tile-view fade-background more-conferences-button">
        <button type="submit" class="btn btn-default" {{action "search"}}>See More Conferences</button>
      </div> <!-- end tile view -->
    </div> <!-- end conference-view-inner-container-->
  </div><!-- end conference-view-outer-container-->

  {{outlet}}
</div> <!-- end container fluid -->
{{yield}}
