<style>
    .tile
    {
        height: 400px;
        width: 400px;
        margin-bottom: 20px;
        text-decoration: none;
        transition: 1s ease;
        overflow: hidden;
    }
    .container{
        width: 100%;
        height: 100%;
        overflow: hidden;
        position: relative;
    }


    #description
    {
        position: absolute;
        bottom: -100%;
        transition: 0.3s ease;
    }

    .tile:hover #description
    {
        transition: 2.5s linear ;
        bottom: 5%;
    }
    .tile:hover h1
    {
        transition: 0.2s ease;
        opacity: 0.2;
    }

</style>


<div class="tile" style="background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url({{logo}});">
    <div class="container">
        <h1 style="position: relative; ">{{title}}</h1>
        <h3 id = "description">{{description}}</h3>
    </div>
</div>
