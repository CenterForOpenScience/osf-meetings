<style>
    .tile
    {
        color: white;
        height: 250px;
        margin-bottom: 0px;
        text-decoration: none;
        transition: 0.2s ease;
        overflow: hidden;

    }
    .tile:hover
    {
        padding: 4px 4px 0 0;
    }

</style>

<div class="tile">
    <div class="row">
        <div class="form-group col-md-5">
            <img src="https://www.ttuhsc.edu/Odessa/som/peds/images/imageNotAvailable.jpg" width="350">
        </div>
        <div class="form-group col-md-7">
            <h1 style="font-size:28px">{{title}}</h1>
            <h4>
            {{#each contributors as |contributor|}}
                {{contributor.users.fullName}}
            {{/each}}
            </h4>
            <br>
            <h4>{{description}}</h4>
        </div>
    </div>
</div>
