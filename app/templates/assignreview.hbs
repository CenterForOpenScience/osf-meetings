


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <h3 class="text-center text-primary">
            </h3>
            <h2>
                Assign Reviewers
            </h2>


            <div class="input-group"> <span class="input-group-addon">Filter</span>

                <input id="filter" type="text" class="form-control" placeholder="Type here..." {{action 'filterdata'}}>
            </div>
            <table class="table table-hover table-striped">
                <thead>

                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Affiliation
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
                </thead>
                <tbody class="searchable">
                {{#each model as |d|}}
                <tr onclick={{action 'storereviewerInfo' d.id}}>
                    <td>
                      {{d.id}}
                    </td>
                    <td>
                      {{d.name}}
                    </td>
                    <td>
                      {{d.affiliation}}
                    </td>
                    <td>
                      {{d.email}}
                    </td>
                </tr>
                {{/each}}
                </tbody>
            </table>


           {{#if isshowingBio}}


            <div class="media" id = "sss">
                <a href="#" class="pull-left"><img alt="Bootstrap Media Preview" src={{reviewerInfo.avatar}} class="media-object" /></a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <span>{{reviewerInfo.name}}</span>
                    </h4>
                    <h4 class="media-heading">
                    </h4>
                    <div class="media">
                        <div class="media-body">

                            <p>
                                <b>Bio:</b>
                                {{reviewerInfo.bio}}
                            </p>
                            <div>
                                <p>
                                    <b>Research Areas:</b>
                                    {{reviewerInfo.research}}
                                </p>

                            </div>

                            <div>
                                <p>
                                    <b>Total OSF Reviews: {{reviewerInfo.osfreviews}}</b>
                                <p></p>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

               <button id="button3id" name="button3id" class="btn btn-success" {{action 'showdata'}}>Invite</button>


           {{/if}}

        </div>
    </div>



</div>


{{#if isshowingInvite}}
  {{#modal-dialog close="hidedata"
  targetAttachment="center"
  translucentOverlay=true}}
      <form class="form-horizontal" style="width: 1000px">
          <fieldset>

              <!-- Form Name -->
              <legend>Reviewer Invitation</legend>

              <!-- Textarea -->
              <div class="form-group" >
                  <label class="col-md-4 control-label" for="textarea">Email Message</label>
                  <div class="col-md-4">
                        <textarea class="form-control" id="textarea" name="textarea" rows="18" style="width: 600px">{{msgtemplate}} </textarea>
                  </div>
              </div>

              <!-- File Button -->
              <div class="form-group">
                  <label class="col-md-4 control-label" for="filebutton">File Attachment </label>
                  <div class="col-md-4">
                      <input id="filebutton" name="filebutton" class="input-file" type="file">
                  </div>
              </div>

              <!-- Button (Double) -->
              <div class="form-group">
                  <label class="col-md-4 control-label" for="button1id"></label>
                  <div class="col-md-8">
                      <button id="button1id" name="button1id" class="btn btn-success" {{action 'hidedata'}}>Send</button>
                      <button id="button2id" name="button2id" class="btn btn-danger" {{action 'hidedata'}}>Cancel</button>
                  </div>
                {{#bs-progress}}
                  {{bs-progress-bar value=progressValue minValue=0 maxValue=10 showLabel=true type="danger"}}
                {{/bs-progress}}
              </div>

          </fieldset>
      </form>
  {{/modal-dialog}}
{{/if}}


{{outlet}}



